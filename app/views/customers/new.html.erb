<% content_for :title, "New Customer" %>

<div class="new-page-container">
  <div class="form-card">
    <div class="form-header">
      <span class="header-icon">➕</span>
      <div>
        <h1 class="form-title">New Customer</h1>
        <p class="form-description">Create a new customer by filling in the details below.</p>
      </div>
    </div>

    <%= render "form", customer: @customer %>

    <div class="form-footer">
      <%= link_to "← Back to customers", customers_path, class: "back-link" %>
    </div>
  </div>
</div>

<style>
  .new-page-container {
    width: 100%;
    min-height: 100vh;
    padding: 40px 20px;
    background: linear-gradient(135deg, #f0f4f8 0%, #d9e2ec 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  .form-card {
    width: 100%;
    max-width: 600px;
    background-color: white;
    border-radius: 16px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  .form-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 40px 36px;
    color: white;
    display: flex;
    align-items: flex-start;
    gap: 20px;
  }

  .header-icon {
    font-size: 40px;
    line-height: 1;
    flex-shrink: 0;
  }

  .form-title {
    margin: 0 0 8px 0;
    font-size: 28px;
    font-weight: 700;
    letter-spacing: -0.5px;
  }

  .form-description {
    margin: 0;
    font-size: 15px;
    color: rgba(255, 255, 255, 0.95);
    font-weight: 400;
  }

  .customer-form {
    padding: 40px 36px;
  }

  .form-footer {
    padding: 20px 36px;
    background-color: #f9fafb;
    border-top: 1px solid #e5e7eb;
    text-align: center;
  }

  .back-link {
    color: #667eea;
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    letter-spacing: 0.3px;
  }

  .back-link:hover {
    color: #764ba2;
    transform: translateX(-3px);
  }

  @media (max-width: 768px) {
    .new-page-container {
      padding: 20px 16px;
    }

    .form-card {
      border-radius: 12px;
    }

    .form-header {
      padding: 32px 24px;
      gap: 16px;
    }

    .header-icon {
      font-size: 32px;
    }

    .form-title {
      font-size: 24px;
    }

    .form-description {
      font-size: 14px;
    }

    .customer-form {
      padding: 32px 24px;
    }

    .form-footer {
      padding: 16px 24px;
    }
  }

  @media (max-width: 480px) {
    .new-page-container {
      padding: 16px 12px;
    }

    .form-header {
      padding: 24px 20px;
    }

    .header-icon {
      font-size: 28px;
    }

    .form-title {
      font-size: 20px;
    }

    .customer-form {
      padding: 24px 20px;
    }

    .form-footer {
      padding: 12px 20px;
    }
  }
</style>
