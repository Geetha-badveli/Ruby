<% content_for :title, "Products" %>

<div class="products-container">
  <% if notice %>
    <div class="alert alert-success">
      <div class="alert-content">
        <svg class="alert-icon" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <p class="alert-message"><%= notice %></p>
      </div>
      <button class="alert-close" onclick="this.parentElement.style.display='none';">&times;</button>
    </div>
  <% end %>

  <div class="products-header">
    <div class="products-header-content">
      <div class="header-left">
        <h1 class="products-title">Products</h1>
        <p class="products-subtitle">Manage your product catalog</p>
      </div>
      <div class="header-right">
        <%= link_to "New Product", new_product_path, class: "btn btn-primary btn-lg" %>
      </div>
    </div>
  </div>

  <div class="products-content">
    <% if @products.any? %>
      <div id="products" class="products-grid">
        <% @products.each do |product| %>
          <div class="product-card">
            <%= render product %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="products-empty">
        <div class="empty-state">
          <svg class="empty-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m0 0l8-4m-8 4v10l8 4m0-10l8-4m0 10v-10l-8-4"/>
          </svg>
          <h2 class="empty-title">No products yet</h2>
          <p class="empty-description">Start by creating your first product</p>
          <%= link_to "Create Product", new_product_path, class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  .products-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0;
  }

  .alert {
    padding: 16px 20px;
    margin-bottom: 24px;
    border-radius: 8px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    animation: slideDown 0.3s ease;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .alert-success {
    background-color: #d1fae5;
    border-left: 4px solid #10b981;
    color: #065f46;
  }

  .alert-content {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .alert-icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  .alert-message {
    margin: 0;
    font-size: 14px;
    font-weight: 500;
  }

  .alert-close {
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    color: inherit;
    opacity: 0.7;
    transition: opacity 0.2s;
    padding: 0;
    margin-left: 12px;
  }

  .alert-close:hover {
    opacity: 1;
  }

  .products-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 48px 32px;
    margin-bottom: 32px;
    border-radius: 12px;
    color: #ffffff;
  }

  .products-header-content {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 24px;
  }

  .header-left {
    flex: 1;
  }

  .products-title {
    margin: 0 0 8px 0;
    font-size: 36px;
    font-weight: 700;
    color: #ffffff;
  }

  .products-subtitle {
    margin: 0;
    font-size: 15px;
    color: rgba(255, 255, 255, 0.9);
    font-weight: 500;
  }

  .header-right {
    flex-shrink: 0;
  }

  .btn {
    display: inline-block;
    padding: 12px 24px;
    font-size: 14px;
    font-weight: 600;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    text-decoration: none;
    text-align: center;
    transition: all 0.2s ease;
  }

  .btn-primary {
    background-color: #667eea;
    color: #ffffff;
  }

  .btn-primary:hover {
    background-color: #5568d3;
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
  }

  .btn-lg {
    padding: 10px 20px;
    font-size: 13px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 1;
  }

  .products-content {
    padding: 0 32px;
    margin-bottom: 48px;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 24px;
  }

  .product-card {
    background: #ffffff;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
  }

  .product-card:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    transform: translateY(-4px);
  }

  .products-empty {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 400px;
    padding: 40px 20px;
  }

  .empty-state {
    text-align: center;
    max-width: 400px;
  }

  .empty-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 24px;
    color: #d1d5db;
  }

  .empty-title {
    margin: 0 0 12px 0;
    font-size: 24px;
    font-weight: 700;
    color: #1f2937;
  }

  .empty-description {
    margin: 0 0 24px 0;
    font-size: 14px;
    color: #6b7280;
  }

  @media (max-width: 768px) {
    .products-header {
      padding: 32px 16px;
      margin-bottom: 24px;
    }

    .products-header-content {
      flex-direction: column;
      align-items: flex-start;
    }

    .header-right {
      width: 100%;
    }

    .header-right .btn {
      width: 100%;
    }

    .products-title {
      font-size: 28px;
    }

    .products-content {
      padding: 0 16px;
      margin-bottom: 32px;
    }

    .products-grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .products-empty {
      min-height: 300px;
      padding: 30px 16px;
    }

    .empty-icon {
      width: 60px;
      height: 60px;
      margin-bottom: 16px;
    }

    .empty-title {
      font-size: 20px;
      margin-bottom: 8px;
    }
  }
</style>
