<%= form_with(model: product) do |form| %>
  <div class="product-form">
    <% if product.errors.any? %>
      <div class="error-container">
        <div class="error-header">
          <span class="error-icon">⚠️</span>
          <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
        </div>

        <ul class="error-list">
          <% product.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-input", placeholder: "Enter product name" %>
    </div>

    <div class="form-group">
      <%= form.label :description, class: "form-label" %>
      <%= form.textarea :description, class: "form-textarea", placeholder: "Enter product description", rows: 5 %>
    </div>

    <div class="form-row">
      <div class="form-group">
        <%= form.label :price, class: "form-label" %>
        <div class="input-group">
          <span class="input-prefix">$</span>
          <%= form.text_field :price, class: "form-input price-input", placeholder: "0.00" %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :stock, class: "form-label" %>
        <%= form.number_field :stock, class: "form-input", placeholder: "0" %>
      </div>
    </div>

    <div class="form-group checkbox-group">
      <label class="checkbox-label">
        <%= form.checkbox :is_active, class: "form-checkbox" %>
        <span class="checkbox-text">Mark as Active</span>
      </label>
    </div>

    <div class="form-actions">
      <%= form.submit class: "submit-button" %>
    </div>
  </div>
<% end %>

<style>
  .product-form {
    padding: 0;
  }

  .error-container {
    background-color: #fef2f2;
    border-left: 4px solid #ef4444;
    border-radius: 8px;
    padding: 16px;
    margin-bottom: 24px;
  }

  .error-header {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 12px;
  }

  .error-icon {
    font-size: 24px;
  }

  .error-container h2 {
    margin: 0;
    color: #dc2626;
    font-size: 16px;
    font-weight: 600;
  }

  .error-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .error-list li {
    color: #991b1b;
    padding: 8px 0;
    font-size: 14px;
    border-bottom: 1px solid #fecaca;
  }

  .error-list li:last-child {
    border-bottom: none;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 20px;
  }

  .form-label {
    display: block;
    margin-bottom: 8px;
    color: #1f2937;
    font-weight: 600;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .form-input,
  .form-textarea {
    width: 100%;
    padding: 12px 14px;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    font-size: 16px;
    color: #1f2937;
    background-color: #ffffff;
    transition: all 0.3s ease;
    box-sizing: border-box;
    font-family: inherit;
  }

  .form-input:focus,
  .form-textarea:focus {
    outline: none;
    border-color: #667eea;
    background-color: #f0f3ff;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
  }

  .form-input::placeholder,
  .form-textarea::placeholder {
    color: #9ca3af;
  }

  .form-textarea {
    resize: vertical;
    min-height: 120px;
  }

  .input-group {
    position: relative;
    display: flex;
    align-items: center;
  }

  .input-prefix {
    position: absolute;
    left: 12px;
    color: #9ca3af;
    font-weight: 600;
    font-size: 16px;
    pointer-events: none;
  }

  .price-input {
    padding-left: 32px;
  }

  .checkbox-group {
    margin-bottom: 28px;
  }

  .checkbox-label {
    display: flex;
    align-items: center;
    gap: 10px;
    cursor: pointer;
    user-select: none;
  }

  .form-checkbox {
    width: 20px;
    height: 20px;
    cursor: pointer;
    accent-color: #667eea;
  }

  .checkbox-text {
    color: #1f2937;
    font-weight: 600;
    font-size: 14px;
  }

  .form-actions {
    margin-top: 28px;
    display: flex;
    gap: 10px;
  }

  .submit-button {
    flex: 1;
    padding: 12px 24px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
  }

  .submit-button:hover {
    background: linear-gradient(135deg, #764ba2 0%, #6b2e9f 100%);
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(102, 126, 234, 0.4);
  }

  .submit-button:active {
    transform: translateY(0);
    box-shadow: 0 2px 8px rgba(102, 126, 234, 0.3);
  }

  @media (max-width: 768px) {
    .form-row {
      grid-template-columns: 1fr;
      gap: 16px;
    }
  }
</style>
